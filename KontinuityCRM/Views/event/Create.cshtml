@model KontinuityCRM.Models.Event

@{
    ViewBag.Title = "Event";
    ViewBag.icon = "fa-info";
}

<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Create
            </small>
        </span>
    </h1>
</div>

