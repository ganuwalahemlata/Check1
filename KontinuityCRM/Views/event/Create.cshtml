@*<div class="container-fluid">*@
    <div class="row">
        <div class="col-xs-12">

            <form method="post" class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.SmtpServerId, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.SmtpServerId, new SelectList(ViewBag.SmtpServers, "Id", "Name"), "Select SMTP Server", new { @class = "chosen form-control" })
                            @Html.ValidationMessageFor(model => model.SmtpServerId)
                        </div>
                        </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.Type, KontinuityCRM.Models.NotificationType.OrderConfirmation.ToSelectList(), new { @class = "chosen form-control" })
                            @Html.ValidationMessageFor(model => model.Type)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Name, new { @class = "col-xs-12 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextAreaFor(model => model.Description, new { @class = "col-xs-12 col-sm-10", @row = 3 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Template, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.TemplateId, new SelectList(ViewBag.Templates, "Id", "Name"), "Select Template", new { @class = "chosen form-control" })
                            @Html.ValidationMessageFor(model => model.TemplateId)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NoOfDays, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.NoOfDays, new { @class = "col-xs-12 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.NoOfDays)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Link Template", new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.SecondTemplateId, new SelectList(ViewBag.Templates, "Id", "Name"), "Select Template", new { @class = "chosen form-control" })
                            @Html.ValidationMessageFor(model => model.TemplateId)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Publish, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="radio inline">
                            <label>
                                @Html.RadioButtonFor(model => model.Publish, true, new { @class = "ace", @checked = "checked" })
                                <span class="lbl"> Yes</span>
                            </label>
                        </div>

                        <div class="radio inline">
                            <label>
                                @Html.RadioButtonFor(model => model.Publish, false, new { @class = "ace" })
                                <span class="lbl"> No</span>
                            </label>
                        </div>

                        @*<label>@Html.RadioButtonFor(model => model.Publish, true) Yes</label>
            <label>@Html.RadioButtonFor(model => model.Publish, false) No</label>*@
                    </div>
                    @*<div class="col-sm-9">
                        <label>@Html.RadioButtonFor(model => model.Publish, true, new { @checked = "checked" }) Yes</label>
                        <label>@Html.RadioButtonFor(model => model.Publish, false) No</label>
                    </div>*@
                </div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary btn-round">
                            <i class="ace-icon fa fa-check"></i>
                            Create
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <a href="@Url.Action("index")" class="btn btn-white btn-default btn-round">
                            <i class="ace-icon fa fa-times red2"></i>
                            Cancel
                        </a>
                    </div>
                </div>

            </form>

            @*<div class="widget-box">

                <div class="widget-title">
                    <span class="icon"><i class="fa fa-plus"></i></span>
                    <h5>@ViewBag.Title</h5>
                </div>

                <div class="widget-content nopadding">

                    
                </div>
            </div>*@

        </div>
    </div>
@*</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/chosen.jquery.min.js"></script>
<script type="text/javascript">

        (function () {

            $(".chosen").chosen({ max_selected_options: 2 });
            $(".chosen-deselect").chosen({ allow_single_deselect: true });
            $(".chosen").chosen().change();
            $(".chosen").trigger('liszt:updated');
        }())
</script>
}


