@model KontinuityCRM.Models.Event

@{
    ViewBag.Title = "Event";
    ViewBag.icon = "fa-info";
}

<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Edit
            </small>
        </span>
    </h1>
</div>

@*<div id="breadcrumb">
	<a href="@Url.Action("index", "home")" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a>
    <a href="@Url.Action("index")">Events</a>
	<a href="#" class="current">Edit</a>
</div>*@

@*<div class="container-fluid">*@
    <div class="row">
        <div class="col-xs-12">

            <form method="post" class="form-horizontal">

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.SmtpServerId, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.SmtpServerId, new SelectList(ViewBag.SmtpServers, "Id", "Name"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SmtpServerId)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.Type, KontinuityCRM.Models.NotificationType.OrderConfirmation.ToSelectList(), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Type)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Name, new { @class = "col-xs-12 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextAreaFor(model => model.Description, new { @class = "col-xs-12 col-sm-10", @row = 3 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Template, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="col-xs-12 col-sm-5 nopadding no-padding">
                            @Html.DropDownListFor(model => model.TemplateId, new SelectList(ViewBag.Templates, "Id", "Name"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TemplateId)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NoOfDays, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.NoOfDays, new { @class = "col-xs-12 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.NoOfDays)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Publish, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <div class="radio inline">
                            <label>
                                @Html.RadioButtonFor(model => model.Publish, true, new { @class = "ace" })
                                <span class="lbl"> Yes</span>
                            </label>
                        </div>
                        <div class="radio inline">
                            <label>
                                @Html.RadioButtonFor(model => model.Publish, false, new { @class = "ace" })
                                <span class="lbl"> No</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-actions clearfix">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary btn-round">
                            <i class="ace-icon fa fa-save"></i>
                            Save
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <a href="@Url.Action("index")" class="btn btn-white btn-default btn-round">
                            <i class="ace-icon fa fa-times red2"></i>
                            Cancel
                        </a>
                    </div>
                </div>

            </form>

            @*<div class="widget-box">

                <div class="widget-title">
                    <span class="icon"><i class="fa fa-edit"></i></span>
                    <h5>@ViewBag.Title</h5>
                </div>

                <div class="widget-content nopadding">

                   
                </div>
            </div>*@

        </div>
    </div>
@*</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}