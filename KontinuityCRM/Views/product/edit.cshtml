@model KontinuityCRM.Models.Product

@{
    ViewBag.Title = Model.Name;
    ViewBag.icon = "fa-tags";    
}

<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Edit
            </small>
        </span>
    </h1>
</div>

@Html.EditorForModel(new { Edit = true })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/assets/js/ace/ace.widget-box.js"></script>
    <script src="~/Scripts/Product/product.js" type="text/javascript"></script>
    <script type="text/javascript">

        $(function () {
            if ($('#IsSubscription').is(":checked") == false) {
                noty({
                    text: 'This product is the last product in a configured subscription. Once this product bills, no other billing will occur.',
                    layout: 'topRight',
                    closeWith: ['click'],
                    type: 'error'
                });
            } else {
                if ($('#selfrecurring').is(":checked") == false && $('#RecurringProductId').val() == "") {
                    noty({
                    text: 'This product is the last product in a configured subscription. Once this product bills, no other billing will occur.',
                    layout: 'topRight',
                    closeWith: ['click'],
                    type: 'error'
                });
                }
            }
        });
    </script>
}