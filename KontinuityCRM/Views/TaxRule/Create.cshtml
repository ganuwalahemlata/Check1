@model KontinuityCRM.Models.TaxRule

@{
    ViewBag.Title = "Tax Rule";
}

@*@section styles {
    <link href="~/Content/assets/css/chosen.css" rel="stylesheet" />
}*@

<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Create
            </small>
        </span>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">

        <form method="post" class="form-horizontal" role="form">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.TaxProfileId, new { @Value = ((TaxProfile)ViewBag.TaxProfile).Id })
            @*<input type="hidden" name="TaxProfileId" value="@ViewBag.TaxProfileId" />*@
            @Html.EditorForModel(new { CreateView = true })

            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary btn-round">
                        <i class="ace-icon fa fa-check"></i>
                        Create
                    </button>
                    &nbsp; &nbsp; &nbsp;
                    <a href="@Url.Action("index", new { id = ((TaxProfile)ViewBag.TaxProfile).Id })" class="btn btn-white btn-default btn-round">
                        <i class="ace-icon fa fa-times red2"></i>
                        Cancel
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*<script src="~/Content/assets/js/chosen.jquery.js"></script>*@
}




