@model IEnumerable<KontinuityCRM.Models.OrderNote>

@{
    ViewBag.Title = "Order Notes";
    ViewBag.icon = "fa-shopping-cart";
}

<div id="breadcrumb">
	<a href="@Url.Action("index", "home")" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a>
    <a href="@Url.Action("index")"><i class="fa @ViewBag.icon"></i> Orders</a>
	<a href="#" class="current">@ViewBag.Title</a>
</div>

<div class="row">
    <div class="col-xs-12">


        <div class="widget-box">
            
            <div class="widget-title"><span class="icon"><i class="fa @ViewBag.icon"></i></span><h5>Order @ViewContext.RouteData.Values["id"] Notes</h5></div>
            
            <div class="widget-content nopadding">

                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NoteDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Type)</th>
                            <th>@Html.DisplayNameFor(model => model.GatewayResponse)</th>
                            <th>@Html.DisplayNameFor(model => model.FulfillmentProviderResponse)</th>
                            <th>@Html.DisplayNameFor(model => model.Success)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NoteDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>                                
                                <td>@Html.DisplayFor(modelItem => item.GatewayResponse)</td>
                                <td>@Html.DisplayFor(modelItem => item.FulfillmentProviderResponse)</td>
                                <td>@Html.DisplayFor(modelItem => item.Success)</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>
