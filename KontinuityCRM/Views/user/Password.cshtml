<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Change Password
            </small>
        </span>
    </h1>
</div>

@*<div class="container-fluid">*@
<div class="row">
    <div class="col-xs-12">

        @using (Html.BeginForm("password", "user", FormMethod.Post, new { @class = "form-horizontal" }))
        {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(model => model.Password, new { @class = "col-xs-12 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "col-xs-12 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>

    <div class="form-actions clearfix">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-primary btn-round">
                <i class="ace-icon fa fa-save"></i>
                Save
            </button>
            &nbsp; &nbsp; &nbsp;
            <a href="@Url.Action("index")" class="btn btn-white btn-default btn-round">
                <i class="ace-icon fa fa-times red2"></i>
                Cancel
            </a>
        </div>
    </div>

                @*<div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i> Change</button> or
                    @Html.ActionLink("Cancel", "index", null, new { @class = "text-danger" })
                </div>*@


                

            @*<div class="col-xs-12 col-sm-8">

                <div class="widget-box">

                    <div class="widget-title">
                        <span class="icon"><i class="fa fa-edit"></i></span>
                        <h5>@ViewBag.Title</h5>
                    </div>

                        

                </div>



            </div>*@


        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {

            isPermissions();

            $("#ss1 ins").click(function () {
                isPermissions();
            });
            
        });

        function isPermissions() {

            var pdiv = $("#ss1 > div").first();
            if (pdiv.hasClass("checked")) {
                $("#permissionsbox").show();
            }
            else {
                $("#permissionsbox").hide();
            }
        }

    </script>
}



