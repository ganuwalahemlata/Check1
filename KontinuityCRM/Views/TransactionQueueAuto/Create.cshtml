<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Create
            </small>
        </span>
    </h1>
</div>


<div class="row">
    <div class="col-xs-12">

        <form method="post" class="form-horizontal">

            @Html.ValidationSummary(true)


            <div class="form-group">
                @Html.LabelFor(model => model.NoOfTransactions, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.NoOfTransactions, new { @class = "col-xs-12 col-sm-5" })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Amount, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Amount, new { @class = "col-xs-12 col-sm-5" })
                </div>
            </div>


            <div class="form-group" style="padding:0;">
                @Html.Label("Select a Processor", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.DropDownList("ProcessorId", (IEnumerable<SelectListItem>)ViewBag.Processors, new { id = "ProcessorID", @class = "chosen" })
                </div>
            </div>

            <div class="form-group" style="padding:0;">
                @Html.Label("Select a Card Type", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.DropDownList("CardType", (IEnumerable<SelectListItem>)ViewBag.CardType, new { id = "CardType", @class = "chosen" })
                </div>
            </div>


            <div class="form-group" style="padding:0;">
                @Html.Label("Exceute in Min Interval (In Seconds)", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.TimeIntervalMin, new { @class = "col-xs-12 col-sm-5" , @type = "number" })
                </div>
            </div>


            <div class="form-group" style="padding:0;">
                @Html.Label("Exceute in Max Interval (In Seconds)", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.TimeIntervalMax, new { @class = "col-xs-12 col-sm-5", @type = "number" })
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary btn-round">
                        <i class="ace-icon fa fa-check"></i>
                        Create
                    </button>
                    &nbsp; &nbsp; &nbsp;
                    <a href="@Url.Action("index")" class="btn btn-white btn-default btn-round">
                        <i class="ace-icon fa fa-times red2"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
    @Html.Partial("Index")
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script type="text/javascript">

        (function () {

            $(".chosen").chosen({ max_selected_options: 2 });
            $(".chosen-deselect").chosen({ allow_single_deselect: true });
            $(".chosen").chosen().change();
            $(".chosen").trigger('liszt:updated');
        }())
    </script>
}


@section styles{
    <link href="~/Content/chosen.css" rel="stylesheet" />

}
