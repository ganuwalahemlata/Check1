@model KontinuityCRM.Models.BalancerProcessor

@{
    ViewBag.Title = "Processor Delete";
    ViewBag.icon = "fa-book";
}

<div id="breadcrumb">
	<a href="@Url.Action("index", "home")" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a>
    <a href="@Url.Action("index")"><i class="fa fa-book"></i> Balancers</a>
    <a href="@Url.Action("processors", new { id = Model.BalancerId })"><i class="fa fa-book"></i> Processors</a>
	<a href="#" class="current">Delete</a>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">

            <div class="widget-box">

                <div class="widget-title">
                    <span class="icon"><i class="fa fa-trash-o"></i></span>
                    <h5>@ViewBag.Title</h5>
                </div>

                <div class="widget-content nopadding">

                    <form method="post" class="form-horizontal">
                    
                        @Html.HiddenFor(model => model.BalancerProcessorId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Balancer, new { @class = "col-sm-3 col-md-3 col-lg-2 control-label" })
							<div class="col-sm-9 col-md-9 col-lg-10">
                               @Html.TextBoxFor(model => model.Balancer.Name, new { @class = "form-control input-sm" , @readonly = "" })
							</div>
						</div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Processor, new { @class = "col-sm-3 col-md-3 col-lg-2 control-label" })
							<div class="col-sm-9 col-md-9 col-lg-10">
                               @Html.TextBoxFor(model => model.Processor.Name, new { @class = "form-control input-sm" , @readonly = "" })
							</div>
						</div>

                        <div class="form-group">
                            <label class="col-sm-3 col-md-3 col-lg-2 control-label">Properties</label>
							<div class="col-sm-9 col-md-9 col-lg-10">
								<label class="disabled">@Html.CheckBoxFor(model => model.IsPreserved, new { @disabled = "disabled" }) @Html.DisplayNameFor(model => model.IsPreserved)</label>
							</div>
						</div>

                        <div class="form-group">
                             @Html.LabelFor(model => model.InitialLimit, new { @class = "col-sm-3 col-md-3 col-lg-2 control-label" })
							<div class="col-sm-9 col-md-9 col-lg-10">
                                @Html.TextBoxFor(model => model.InitialLimit, new { @class = "form-control input-sm", @readonly = "" })
							</div>
						</div>

                        <div class="form-group">
                             @Html.LabelFor(model => model.Allocation, new { @class = "col-sm-3 col-md-3 col-lg-2 control-label" })
							<div class="col-sm-9 col-md-9 col-lg-10">
                                @Html.TextBoxFor(model => model.Allocation, new { @class = "form-control input-sm" , @readonly = ""})
							</div>
						</div>

                          <div class="form-actions">
							<button type="submit" class="btn btn-danger btn-sm">Delete</button> or 
                            @Html.ActionLink("Cancel", "processors", new { id = Model.BalancerId }, new { @class = "text-danger" })
						</div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
