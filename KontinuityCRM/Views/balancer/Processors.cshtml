@model IEnumerable<KontinuityCRM.Models.BalancerProcessor>

@{
    ViewBag.Title = "Processors";
    ViewBag.icon = "fa-book";
}

<div id="breadcrumb">
	<a href="@Url.Action("index", "home")" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a>
    <a href="@Url.Action("index")"><i class="fa fa-book"></i> Balancers</a>
	<a href="#" class="current">@ViewBag.Title</a>
</div>

<div class="row">
    <div class="col-xs-12">

        <a href="@Url.Action("createprocessor", new { id = ViewContext.RouteData.Values["id"] })" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Add Processor</a>

        <div class="widget-box">
            
            <div class="widget-title"><span class="icon"><i class="fa @ViewBag.icon"></i></span><h5>Balancer @ViewBag.Balancer.Name @ViewBag.Title</h5></div>
            
            <div class="widget-content nopadding">

                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Processor)</th>
                            <th>@Html.DisplayNameFor(model => model.IsPreserved)</th>
                            <th>@Html.DisplayNameFor(model => model.InitialLimit)</th>
                            <th>@Html.DisplayNameFor(model => model.Allocation)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Processor.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsPreserved)</td>
                                <td>@Html.DisplayFor(modelItem => item.InitialLimit)</td>
                                <td>@Html.DisplayFor(modelItem => item.Allocation)</td>
                                <td>
                                    @*@Html.ActionLink("Edit", "editprocessor", new { id=item.  }) |
                                    @Html.ActionLink("Delete", "deleteprocessor", new { id=item.BalancerProcessorId })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>
