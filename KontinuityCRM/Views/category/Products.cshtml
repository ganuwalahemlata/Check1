@model IEnumerable<KontinuityCRM.Models.ProductCategory>

@{
    ViewBag.Title = String.Format("{0} Products", ViewBag.CategoryName);
    ViewBag.icon = "fa-folder";
}

<div id="breadcrumb">
	<a href="@Url.Action("index", "home")" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a>
    <a href="@Url.Action("index")" title="Go to Categories" class="tip-bottom"><i class="fa fa-folder"></i> Categories</a>
	<a href="#" class="current">@ViewBag.Title</a>
</div>

<div class="row">
    <div class="col-xs-12">

        <a href="@Url.Action("addproduct", new { id = ViewContext.RouteData.Values["id"] })" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Add Product</a>

        <div class="widget-box">
            
            <div class="widget-title"><span class="icon"><i class="fa @ViewBag.icon"></i></span><h5>@ViewBag.Title</h5></div>
            
            <div class="widget-content nopadding">

                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Product)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                                <td>
                                   @* @Html.ActionLink("Edit", "edit", new { id=item.ProductCategoryId  }) |*@
                                    @Html.ActionLink("Delete", "deleteproduct", new { id=item.ProductCategoryId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>
