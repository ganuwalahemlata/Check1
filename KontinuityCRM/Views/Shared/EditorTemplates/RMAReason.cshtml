@model KontinuityCRM.Models.RMAReason

@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-3" })
    <div class="col-sm-9">
        @Html.TextBoxFor(model => model.Description, new { @class = "col-xs-12 col-sm-7" })
        @*@Html.EditorFor(model => model.Description)*@
        @Html.ValidationMessageFor(model => model.Description)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-sm-3" })
    <div class="col-sm-9">
        @*<div class="checkbox">
            <label>
                <input name="form-field-checkbox" type="checkbox" class="ace">
                <span class="lbl"></span>
            </label>
        </div>*@

        @Html.EditorFor(model => model.Active)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.CustomAction, htmlAttributes: new { @class = "control-label col-sm-3" })
    <div class="col-sm-9">
        @Html.EditorFor(model => model.CustomAction)
    </div>
</div>

<div id="customactions" class="@(Model.CustomAction ? string.Empty : "hidden")">

    <div class="form-group">
        @Html.LabelFor(model => model.Action, htmlAttributes: new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            <div class="col-xs-12 col-sm-6 nopadding no-padding">
                @Html.DropDownListFor(model => model.Action, Model.Action.ToSelectList(), new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExpiredAction, htmlAttributes: new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            <div class="col-xs-12 col-sm-6 nopadding no-padding">
                @Html.DropDownListFor(model => model.ExpiredAction, Model.ExpiredAction.ToSelectList(), new { @class = "form-control" })
            </div>
        </div>
    </div>

</div>

@Html.Script(
@<script type="text/javascript">

    (function () {

        $("#CustomAction").change(function () {
            $("#customactions").toggleClass("hidden");
        });

    }());
    
</script>
)



