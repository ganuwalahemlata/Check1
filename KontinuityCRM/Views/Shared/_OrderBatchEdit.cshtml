@Html.Script(
@<script type="text/javascript">
    
    (function () {

        $("#BatchSave").click(function () {
            var $checkboxes = $('tbody').find('tr th:first-child input:checkbox:checked');
            $(this).closest("form").append($checkboxes);
        });

    }());

</script>
