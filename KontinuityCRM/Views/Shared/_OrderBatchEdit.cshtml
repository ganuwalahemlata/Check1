        @Html.LabelFor(model => model.ShippingMethodId, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            <div class="col-xs-12 col-sm-5 nopadding no-padding">
                @Html.DropDownListFor(model => model.ShippingMethodId, ((IEnumerable<ShippingMethod>)ViewBag.ShippingMethods)
                .Select(s => new SelectListItem
                {
                    Value = s.Id.ToString(),
                    Text = String.Format("{0} ({1}) ${2}", s.Name, s.Id, s.Price.ToString("F"))

                }), "", new { @class = "form-control" })
