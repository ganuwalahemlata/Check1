@model KontinuityCRM.Models.Fulfillments.Fulfillment

@{
    ViewBag.icon = "fa-certificate";
    ViewBag.Title = Model.Alias;
}

<div class="page-header">
    <h1 class="row no-padding">
        <span class="col-sm-8 no-padding">
            @ViewBag.Title
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Edit
            </small>
        </span>
    </h1>
</div>


<div class="row">
    <div class="col-xs-12">

        <form method="post" class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CreatedDate)
            @Html.Hidden("ModelType", Model.GetType())

            @Html.EditorForModel()

            <div class="form-group">
                @Html.LabelFor(model => model.Alias, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Alias, new { @class = "col-xs-12 col-sm-5" })
                    @Html.ValidationMessageFor(model => model.Alias)
                </div>
            </div>

            <div class="form-actions clearfix">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary btn-round">
                        <i class="ace-icon fa fa-save"></i>
                        Save
                    </button>
                    &nbsp; &nbsp; &nbsp;
                    <a href="@Url.Action("index")" class="btn btn-white btn-default btn-round">
                        <i class="ace-icon fa fa-times red2"></i>
                        Cancel
                    </a>
                </div>
            </div>

        </form>           

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}